<div class="">
  <h1>Restaurants</h1>
  <div class="">
    <% @restaurants.each_with_index do |r, index| %>
      <h3><%= index + 1 %>. <%= link_to r.name, restaurant_path(r) %></h3>
      <ul>
        <li>Address: <%= r.address %></li>
        <li>Category: <%= r.category %></li>
      </ul>
    <% end %>
  </div>
  <p><%= link_to "Create new", new_restaurant_path %></p>
</div>
