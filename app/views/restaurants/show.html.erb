<div>
  <h1><%= @restaurant.name %></h1>
  <div>
    <ul>
      <li><b>Location:</b> <%=@restaurant.address%></li>
      <li><b>Cuisine:</b> <%=@restaurant.category%></li>
      <li><b>Contact</b> number: <%=@restaurant.phone_number%></li>
      <li><b>Review:</b> <% @restaurant.reviews.each do |review| %>
        <p><%= review.content %></p>
        <p><%= review.rating %></p>
        <% end %></li>
    </ul>
  </div>
  <p class="btn btn-light"><%= link_to "Make a review", new_restaurant_review_path(@restaurant) %></p>
  <p class="btn btn-light"><%= link_to "See all restaurants",  restaurants_path %></p>

</div>


<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>
